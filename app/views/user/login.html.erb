<%= stylesheet_link_tag    'login/style' %>
<%= stylesheet_link_tag    'bootstrap/bootstrap.min' %>
<%= javascript_include_tag 'login/bootstrap.min' %>
<%= javascript_include_tag 'bootstrap/jquery-2.1.4.min' %>
